.pane-window
  display flex
  flex 1
  position relative
  outline none
  overflow hidden
  userSelect text

.pane-window-vertical
  @extends .pane-window
  flex-direction row
  height 100%
  position absolute
  left 0
  right 0

.pane-window-horizontal
  @extends .pane-window
  flex-direction column
  height 100%
  minHeight 100%
  width 100%
  position absolute
  top 0
  bottom 0
  width 100%

.pane
  flex 1
  position relative
  outline none
  overflow auto

.pane-border
  box-sizing border-box
  background #dcdfe1
  z-index 1
  background-clip padding-box

.pane-border-horizontal
  @extends .pane-border
  height 11px
  margin -5px 0
  border-top 5px solid rgba(255, 255, 255, 0)
  border-bottom 5px solid rgba(255, 255, 255, 0)
  cursor row-resize
  width 100%

.pane-border-vertical
  @extends .pane-border
  width 11px
  margin 0 -5px
  border-left 5px solid rgba(255, 255, 255, 0)
  border-right 5px solid rgba(255, 255, 255, 0)
  cursor col-resize
  height 100%
